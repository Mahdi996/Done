<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Done" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blackP</item>
        <item name="colorPrimaryVariant">@color/blackD</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bottomNavigationDark</item>
        <item name="colorSecondaryVariant">@color/blackD</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonTint">@color/blue</item>

        <item name="rv_background">@color/dark_background</item>
        <item name="item_background">@color/item_dark_background</item>
        <item name="bottom_navigation_color">@color/bottomNavigationDark</item>
        <item name="dividerColorDone">@color/dividerNight</item>


    </style>

    <declare-styleable name="item">
        <attr name="item_background" format="color" />
        <attr name="rv_background" format="color" />
        <attr name="dividerColorDone" format="color" />
    </declare-styleable>
</resources>